{# templates/recipes/detail.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto mb-20">
        <div class="my-10">
            <h5 class="font-title bold text-5xl mb-10">{{ recipeData.name }}</h5>
            <img class="rounded-lg w-full" src="{{ recipeData.imageUrl }}"/>
        </div>

        <div class="flex mb-10 text-xs">
            <div class="pr-10 border-r border-gray-400">
                <span class="block text-gray-400">PREP TIME</span>
                <span>{{ recipeData.prepTime }} MIN</span>
            </div>
            <div class="px-10 border-r border-gray-400">
                <span class="block text-gray-400">COOK TIME</span>
                <span>{{ recipeData.cookingTime }} MIN</span>
            </div>
            <div class="px-10">
                <span class="block text-gray-400">SERVINGS</span>
                <span>{{ recipeData.servings }} PEOPLE</span>
            </div>
        </div>

        <div class="flex flex-row">
            <div class="basis-1/3">
                <h6 class="text-3xl font-title mb-5">Ingredients</h6>
                {% for ingredient in recipeData.ingredients %}
                    <p class="mb-5">{{ ingredient.name }}</p>
                {% endfor %}
            </div>
            <div class="basis-2/3">
                <h6 class="text-3xl font-title mb-5">Instructions</h6>
                <ul>
                    {% for step in recipeData.direction %}
                    <li class="mb-5">
                        <span class="inline-block w-6 font-bold text-white rounded-full bg-red-400 text-center mr-3">{{ loop.index }}</span>
                        {{ step.description }}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}